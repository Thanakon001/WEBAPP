<main class="page" page="user_setting" id="user_setting">
    <div class="box">
        <div class="box-detail">
            <div class="box-detail-header">
                <span>โปรไฟล์</span>
            </div>
            <div class="box-detail-body">
                <form id="form_usersetting" enctype="multipart/form-data">
                    <div class="contai-profile">
                        <div class="col-profile">
                            <label for="user_name">ชื่อ *</label>
                            <input type="text" name="user_name" id="user_name" required>
                            <input type="hidden" name="user_id" id="user_id" required>
                            <label for="user_address">ที่อยู่</label>
                            <textarea name="user_address" rows="4" cols="50" placeholder="รายละเอียด.."></textarea>
                        </div>
                        <div class="col-profile">
                            <label for="user_email">E-mail</label>
                            <input type="email" name="user_email" id="user_email" required>
                            <label for="user_password">รหัสผ่าน</label>
                            <input type="password" name="user_password" id="user_password" required>
                            <label for="user_cpassword">รหัสผ่าน</label>
                            <input type="password" name="user_cpassword" id="user_cpassword" required>
                        </div>
                        <div class="col-profile">
                            <div class="circle" id="imageContainer">
                                <img id="image" src="" alt="Uploaded">
                            </div>
                            <br>
                            <label for="fileInput">
                                <span class="btn-label bg-peple">เลือกรูปภาพ</span>
                            </label>
                            <input type="file" id="fileInput" name="user_image" accept="image/*" multiple>
                        </div>
                    </div>
                </form>
                <div class="box-footer">
                    <button class="btn bg-peple" onclick="sub_edituser()">บันทึกข้อมูล</button>
                    <button class="btn bg-oren" name="editpassword">เปลี่ยนรหัสผ่าน</button>
                </div>
                <br>
                <div class="box-footer">
                    <span>*กรุณากรอกรหัสผ่านเพื่อยืนยันการแก้ไขข้อมูล</span>
                </div>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="box-detail">
            <div class="box-detail-header box between" style="border: none;align-items: center;">
                <span>บัญชี</span>
